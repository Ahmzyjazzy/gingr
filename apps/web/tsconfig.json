{
  "extends": "@gingr/tsconfig/nextjs.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.ts"],
  "exclude": ["node_modules"]
}
