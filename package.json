{
  "name": "gingr",
  "private": true,
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter web --filter ui",
    "dev:admin": "turbo dev --filter admin --filter ui",
    "dev:docs": "turbo dev --filter docs --filter ui",
    "dev:email": "turbo dev:emails",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:prisma:studio": "turbo db:prisma:studio",
    "db:migrate:deploy": "turbo db:migrate:deploy"
  },
  "devDependencies": {
    "@gingr/eslint-config": "*",
    "@gingr/prettier-config": "*",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.3.4",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "./**/*.{js,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write \"**/*.{ts,tsx,md}\""
    ]
  },
  "dependencies": {
    "node-mailjet": "^6.0.6"
  }
}
